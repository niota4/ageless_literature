{
  "name": "ageless-literature",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A production-grade rare-book marketplace and vendor ecosystem",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=apps/api",
    "build:web": "npm run build --workspace=apps/web",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "npm run start --workspace=apps/api",
    "start:web": "npm run start --workspace=apps/web",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "npm run typecheck --workspaces --if-present",
    "db:migrate": "npm run migrate --workspace=packages/db",
    "db:seed": "npm run seed --workspace=packages/db",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "prepare": "husky install",
    "test": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --runInBand",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --testPathPattern=tests/unit --passWithNoTests --runInBand",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --testPathPattern=tests/integration --runInBand",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --coverage --runInBand",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --ci --coverage --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:local": "node scripts/test-local.cjs",
    "test:validate": "node scripts/validate-test-setup.cjs"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@sendgrid/mail": "^8.1.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.0",
    "pg": "^8.18.0",
    "prettier": "^3.1.1",
    "stripe": "^20.1.0",
    "supertest": "^7.0.0",
    "twilio": "^5.11.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=999",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "framer-motion": "^12.34.0",
    "mysql2": "^3.16.3",
    "next": "^15.5.9",
    "php-serialize": "^5.1.3",
    "playwright": "^1.57.0",
    "react-countup": "^6.5.3"
  }
}
