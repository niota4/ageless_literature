# ──────────────────────────────────────────────
# Ageless Literature — Environment Variables
# Copy to .env and fill in real values
# ──────────────────────────────────────────────

NODE_ENV=development

# ── Database ──────────────────────────────────
DATABASE_URL=postgresql://postgres:password@localhost:5432/ageless_literature
# Or set individually:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ageless_literature
# DB_USER=postgres
# DB_PASSWORD=password
# DB_SSL=false

# ── Redis ─────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── Server ────────────────────────────────────
API_PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000
INTERNAL_API_URL=http://localhost:3001

# ── Auth — JWT ────────────────────────────────
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE

# ── Auth — Google OAuth ───────────────────────
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# ── Auth — Apple OAuth ────────────────────────
APPLE_CLIENT_ID=com.example.your-app
APPLE_TEAM_ID=YOUR_APPLE_TEAM_ID
APPLE_KEY_ID=YOUR_APPLE_KEY_ID
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----"

# ── Payments — Stripe ─────────────────────────
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_SECRET_HERE

# ── Payments — PayPal ─────────────────────────
PAYPAL_CLIENT_ID=YOUR_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_CLIENT_SECRET
PAYPAL_PAYOUTS_MODE=sandbox
PAYPAL_WEBHOOK_ID=YOUR_PAYPAL_WEBHOOK_ID

# ── Cloudinary ────────────────────────────────
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET

# ── MeiliSearch ───────────────────────────────
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=YOUR_MEILI_MASTER_KEY

# ── SendGrid (email) ─────────────────────────
SENDGRID_API_KEY=SG.YOUR_KEY_HERE
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_FROM_NAME=Ageless Literature
SENDGRID_REPLY_TO=support@example.com

# ── Twilio (SMS) ──────────────────────────────
TWILIO_ACCOUNT_SID=YOUR_TWILIO_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_FROM_NUMBER=+15551234567

# ── Client-side (NEXT_PUBLIC_*) ───────────────
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
NEXT_PUBLIC_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
NEXT_PUBLIC_APPLE_CLIENT_ID=com.example.your-app
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
